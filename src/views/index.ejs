<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>CRUD Mascotas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Lista de Mascotas</h5>
          <a href="/crear" class="btn btn-primary btn-sm">Registrar Mascota</a>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-hover table-sm mb-0">
              <thead class="table-dark">
                <tr>
                  <th>ID</th>
                  <th>Nombre</th>
                  <th>Especie</th>
                  <th>Raza</th>
                  <th>Edad</th>
                  <th>Sexo</th>
                  <th>Propietario</th>
                  <th>Teléfono</th>
                  <th>Fecha de vacunación</th>
                  <th class="text-end">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% if (!mascotas || mascotas.length === 0) { %>
                  <tr>
                    <td colspan="10" class="text-center py-4">No se encontraron mascotas</td>
                  </tr>
                <% } else { %>
                  <% mascotas.forEach(m => { %>
                    <tr>
                      <td><%= m.ID %></td>
                      <td><%= m.Nombre %></td>
                      <td><%= m.Especie %></td>
                      <td><%= m.Raza %></td>
                      <td><%= m.Edad %></td>
                      <td><%= m.Sexo %></td>
                      <td><%= m.NombreDueno %></td>
                      <td><%= m.TelefonoDueno %></td>
                      <td><%= m.FechaVacunacion ? new Date(m.FechaVacunacion).toLocaleDateString('es-ES') : '-' %></td>
                      <td class="text-end">
                        <div class="btn-group btn-group-sm" role="group">
                          <a href="/editar/<%= m.ID %>" class="btn btn-outline-info">Editar</a>
                          <a href="/borrar/<%= m.ID %>" class="btn btn-outline-danger" onclick="return confirm('¿Eliminar mascota ID <%= m.ID %>?')">Eliminar</a>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
